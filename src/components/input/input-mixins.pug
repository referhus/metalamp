mixin b-input-text(inputTitle, inputSubTitle)
 .b-input-text
  p.input-text= inputTitle
  p.input-text.input-text_light= inputSubTitle
-

mixin form-input(value, typeText, placeholderIcon, classInput)
 .form-input
  if(value == 'input')
   input(type= typeText, 
   placeholder= placeholderIcon, class= classInput)
  else if(value == 'button')
   button.dropdown 
    span= typeText 
    span.material-icons.arrow= placeholderIcon
 -

mixin b-input(inputTitle, inputSubTitle, value, typeText, placeholderIcon, classInput)
 +b-input-text(inputTitle, inputSubTitle)
 +form-input(value, typeText, placeholderIcon, classInput)
-


